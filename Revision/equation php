<?php
if (isset($_POST['Calculer'])) {
    $a = $_POST['a'];
    $b = $_POST['b'];

    if ($a == 0) {
        if ($b == 0) {
            printf("l'équation a une infinité de solutions\n");
        } else {
            printf("l'équation n'a pas de solution\n");
        }
    } else {
        $x = -$b / $a;
        printf("l'équation a pour résultat %f", $x);
    }
}
